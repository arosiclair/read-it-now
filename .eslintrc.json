{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": ["standard", "plugin:vue/recommended"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "API_URL": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "rules": {
        "vue/html-self-closing": "off",
        "vue/html-closing-bracket-newline": "off",
        "vue/max-attributes-per-line": ["warn", { "singleline": 3 }]
    }
}